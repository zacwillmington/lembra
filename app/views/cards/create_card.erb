<%if flash[:message]%>
    <div class="errors">
        <ul>
        <%flash[:message].each do |error, message|%>
            <li><%=error.capitalize.to_s.gsub("_", " ")%>: <%=message[0]%></li>
        <%end%>
        </ul>
    <%end%>
</div>
<form action="/users/<%=@deck.user.id%>/decks/<%=@deck.id%>/cards" method="post">
    <label for="front_side">Front Side</label>
    <input type="text" name="front_side">
    <br>
    <label for="back_side_of_card">Back Side</label>
    <input type="text" name="back_side">
    <br>
    <input type="submit" name="Create" value="submit">
</form>
